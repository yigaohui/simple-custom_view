<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gaofei="http://schemas.android.com/apk/res/com.gaofei.ToggleButton"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.gaofei.ToggleButton.view.MyToggleButton
        android:id="@+id/mytogglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        gaofei:mybackground="@drawable/slide_background2"
        gaofei:myicon="@drawable/slide_icon2"
        gaofei:toggleon="true"
        ></com.gaofei.ToggleButton.view.MyToggleButton>

</RelativeLayout>